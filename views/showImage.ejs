<%- include("partials/head.ejs")%>

    <%- include("partials/header.ejs")%>

        <main class="search-main">

            <% anime.map((element,idx)=>{ %>
                <section class="s-search">
                    <div class="d-search">
                        <div class="vid-search">
                            <video class="vid-img" controls>
                                <source src="<%= element.video%>" type="video/mp4">
                            </video>
                        </div>
                        <div class="text-search">

                            <ul class="u-search">


                                <li>
                                    <h2 class="search-title">English Title: <%= element.title_english%>
                                    </h2>
                                </li>
                                <li>
                                    <h2 class="search-title">Native Title: <%= element.title_native%>
                                    </h2>
                                </li>
                                <li>
                                    <h2 class="search-author">Similarity Rate: <%= element.similarity%>
                                    </h2>
                                </li>
                                <li>
                                    <h2 class="search-author">Season Number: <%= element.season%>
                                    </h2>
                                </li>
                                <li>
                                    <h2 class="search-author">Episode Number: <%= element.episode%>
                                    </h2>
                                </li>
        
                                <span class="less-txt<%= idx %>" id="dots">...</span>
                                <span class="more-txt<%= idx %>" id="more">
                                <li>
                                    <h2 class="search-author">Matching Time: <%= element.at%>
                                    </h2>
                                </li>
                                <li>
                                    <h2 class="search-author">Start Time: <%= element.from%>
                                    </h2>
                                </li>
                                <li>
                                    <h2 class="search-author">End Time: <%= element.to%>
                                    </h2>
                                </li>
                            </span>
                            </ul>

                            <button class="btn-details<%= idx %> btn-details"  id="myBtn">See More Details</button>

                        </div>
                    </div>
                </section>
                <% }) %>

        </main>


        <%- include("partials/footer.ejs")%>