<%- include("partials/head.ejs")%> <%- include("partials/header.ejs")%>

<main id="slide">
  <section class="slider">
    <div class="flexslider">
      <ul class="slides">
        <% anime.forEach(element=> { %>
        <li>
          <section class="mainSection">
            <div class="main-div">
              <div class="anime-des">
                <form action="">
                  <ul>
                    <li>
                      <h1 class="title"><%= element.title %></h1>
                    </li>
                    <li class="not-title">Score: <%= element.score %></li>
                    <li class="not-title">Rank: <%= element.rank %></li>
                    <li class="not-title">Type: <%= element.type %></li>
                    <li class="not-title">
                      Start Date: <%= element.start_date %>
                    </li>
                    <li class="not-title">End Date: <%= element.end_date %></li>
                    <li>
                      <button class="btn-title">
                        <span class="text">See More</span>
                      </button>
                    </li>
                  </ul>
                </form>
              </div>
              <div class="anime-img">
                <img class="list-img" src="<%= element.img_url %>" alt="" />
              </div>
            </div>
          </section>
        </li>
        <% }) %>
      </ul>
    </div>
  </section>

  <!-- Adding news data from API  -->
  <% news.forEach(element=> { %>
  <section class="s-news">
    <div class="d-news">
      <div class="img-news">
        <img class="img-news-img" src="<%= element.urlToImage %>" alt="" />
      </div>

      <div class="text-news">
        <form action="">
          <ul class="u-news">
            <li class="news-author">
              <h2><%= element.author %></h2>
            </li>
            <li class="news-title">
              <h2><%= element.title %></h2>
            </li>
            <li class="l-news">
              <p><%= element.content %></p>
            </li>
            <li class="news-data">
              <h2>Published at: <%= element.publishedAt %></h2>
            </li>

            <button class="btn-more">
              <span class="text">
                <a href="<%= element.url %>">Resources</a>
              </span>
            </button>
            <button type="submit" class="btn-more2">
              <span class="text">Continue Reading</span>
            </button>
          </ul>
        </form>
      </div>
    </div>
  </section>
  <% }); %>
</main>

<%- include("partials/footer.ejs")%>
